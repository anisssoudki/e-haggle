    <ul>
    <%@user.errors.full_messages.each do |msg|%>
        <li><%=msg%></li>
    </ul>
      <%end%>
<%end%>

<%# signup-form %>

<%= form_for @user do |f| %>
        <h4>Username:</h4> 
        <%=f.text_field :username%> 
        <h4>Email:</h4>     
        <%=f.text_field :email%> 
        <h4>Password:</h4> 
        <%=f.text_field :password%> 
        

