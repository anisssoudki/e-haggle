<h1>Showing product details</h1>

<table>
    <thead>
        <tr>
            <th>Name:</th>
            <th>Price:</th>
            <th>Description:</th>
            <th>image:</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <%@products.each do |product|%>
            <td><%=product.name %></td>
            <td><%=product.price%></td>
            <td><%=product.description%></td>
            <td>
                <div 
                style="width:100px; height:auto">
                <%=image_tag(product.image, style:'width:100%')%>
                </div>
            </td>
        </tr>
    </tbody>
</table>
<%end%>
  